{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "domains": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "doc_type": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": [
                    "web", "social_media", "forums", "news",
                    "books", "literary", "fiction", "nonfiction", "textbooks",
                    "reference", "encyclopedic", "dictionaries", 
                    "academic_papers", "sciences", "humanities",
                    "code", "source_code", "documentation",
                    "media", "podcasts", "subtitles", "specific_datasets", "instruction", "unknown"
                  ]
                },
                "uniqueItems": true
              },
              "data_size_gb": {
                "type": "number"
              },
              "documents": {
                "type": "number"
              },
              "tokens_billions": {
                "type": "number"
              },
              "features": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": [
                    "char_len",
                    "num_tokens",
                    "unique_tokens",
                    "const_parse_const_tree_depth",
                    "const_parse_num_words_input",
                    "const_parse_num_sentences_input",
                    "dep_parse_dist_to_head",
                    "dep_parse_dist_to_root",
                    "code_features_dist_to_def",
                    "code_features_tree_depth"
                  ]
                }
              },
              "feature_statistics": {
                "type": "object",
                "patternProperties": {
                  "^(char_len|num_tokens|unique_tokens|const_parse_const_tree_depth|const_parse_num_words_input|const_parse_num_sentences_input|dep_parse_dist_to_head|dep_parse_dist_to_root|code_features_dist_to_def|code_features_tree_depth)$": {
                    "type": "object",
                    "properties": {
                      "mean": { "type": "number" },
                      "std": { "type": "number" }
                    },
                    "required": ["mean", "std"]
                  }
                },
                "additionalProperties": false
              }
            },
            "required": ["doc_type", "tokens_billions"]
          },
          {
            "type": "object",
            "properties": {
              "file_pointer": {
                "type": "string",
                "format": "uri"
              }
            },
            "required": ["file_pointer"]
          }
        ]
      }
    },
    "summary": {
      "type": "object",
      "properties": {
        "total_tokens_billions": {
          "type": "number"
        },
        "percentage_web": {
          "type": "number"
        },
        "percentage_code": {
          "type": "number"
        },
        "percentage_books": {
          "type": "number"
        },
        "percentage_reference": {
          "type": "number"
        },
        "percentage_academic_papers": {
          "type": "number"
        },
        "percentage_english": {
          "type": "number"
        },
        "overall_composition": {
          "type": "object",
          "patternProperties": {
            "^.*$": {
              "type": "number"
            }
          }
        },
        "overall_feature_statistics": {
          "type": "object",
          "patternProperties": {
            "^(char_len|num_tokens|unique_tokens|const_parse_const_tree_depth|const_parse_num_words_input|const_parse_num_sentences_input|dep_parse_dist_to_head|dep_parse_dist_to_root|code_features_dist_to_def|code_features_tree_depth)$": {
              "type": "object",
              "properties": {
                "mean": { "type": "number" },
                "std": { "type": "number" }
              },
              "required": ["mean", "std"]
            }
          },
          "additionalProperties": false
        }
      },
      "required": ["total_tokens_billions"]
    }
  },
  "required": ["summary"]
}