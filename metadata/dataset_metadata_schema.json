{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "domains": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "doc_type": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": [
                    "web", "social_media", "forums", "news",
                    "books", "literary", "fiction", "nonfiction", "textbooks",
                    "reference", "encyclopedic", "dictionaries", 
                    "academic_papers", "sciences", "humanities",
                    "code", "source_code", "documentation",
                    "media", "podcasts", "subtitles", "specific_datasets", "instruction", "unknown"
                  ]
                },
                "uniqueItems": true
              },
              "data_size_gb": {
                "type": "number"
              },
              "documents": {
                "type": "number"
              },
              "tokens_billions": {
                "type": "number"
              },
              "features": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            },
            "required": ["doc_type", "tokens_billions"]
          },
          {
            "type": "object",
            "properties": {
              "file_pointer": {
                "type": "string",
                "format": "uri"
              }
            },
            "required": ["file_pointer"]
          }
        ]
      }
    },
    "summary": {
      "type": "object",
      "properties": {
        "total_size_tokens_billions": {
          "type": "number"
        },
        "mix": {
          "type": "object",
          "additionalProperties": {
            "type": "number"
          }
        }
      },
      "required": ["total_size_tokens_billions"]
    }
  },
  "required": ["domains", "summary"]
}